<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="fal_vprocess_form_view">
        <field name="mode">primary</field>
        <field name="name">fal_vprocess.form</field>
        <field name="model">fal.vprocess</field>
        <field name="priority">16</field>
        <field name="arch" type="xml">
            <form>
                <sheet string="fal.vprocess">
                    <div class="oe_title">
                        <h1>
                            <field name="name" required="1" />
                        </h1>
                    </div>
                    <group name="main_group">
                        <group name="group_left">
                            <field name="model_id" />
                            <field name="trigger_id" domain="[('model_id', '=', model_name)]"
                                context="{'default_model_id': model_name}" />
                            <field name="filter_id" domain="[('model_id', '=', model_name)]"
                                context="{'default_model_id': model_name}" />
                            <field name="model_name" />
                            <field name="trigger_domain" />
                            <field name="filter_domain" />
                        </group>

                        <group name="group_right">
                            <field name="active" />
                            <field name="disable_edit" />
                            <field name="allow_restart_after_approved" />
                            <field name="allow_restart_after_cancelled" />
                            <field name="log_message_to_object" />
                            <field name="process_activity_type_id" />
                        </group>
                    </group>
                    <h4>Steps</h4>
                    <field name="step_ids">
                        <list>
                            <field name="name" />
                            <field name="sequence" />
                        </list>
                    </field>
                </sheet>
                <chatter />
            </form>
        </field>
    </record>

    <menuitem name="Validation Process" id="menu_validation_process"
        web_icon="fa fa-sitemap,#f1c40f,#34495e" />

    <record id="action_validation_process" model="ir.actions.act_window">
        <field name="name">Validation Process</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">fal.vprocess</field>
        <field name="view_mode">list,form</field>
    </record>
    <menuitem id="menu_validation_process_vprocess" name="Validation Process"
        parent="menu_validation_process" action="action_validation_process" />
</odoo>